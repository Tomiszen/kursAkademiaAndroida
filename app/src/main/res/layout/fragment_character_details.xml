<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.tomisztomek.kursakademiaandroida.features.characters.details.presentation.CharacterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <TextView
            style="@style/style_headlines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Character_details" />

        <TextView
            android:id="@+id/character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.character.name}"
            style="@style/style_item" />

        <TextView
            android:id="@+id/character_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.character.gender}"
            style="@style/style_item" />

        <TextView
            android:id="@+id/character_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.character.species}"
            style="@style/style_item" />
    </LinearLayout>
</layout>