<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.tomisztomek.kursakademiaandroida.features.episodes.details.presentation.EpisodeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <TextView
            style="@style/style_headlines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Episode_details" />

        <TextView
            android:id="@+id/episode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.episode.name"
            style="@style/style_item" />

        <TextView
            android:id="@+id/episode_air_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.episode.airDate"
            style="@style/style_item" />

        <TextView
            android:id="@+id/episode_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.episode.code"
            style="@style/style_item" />
    </LinearLayout>
</layout>