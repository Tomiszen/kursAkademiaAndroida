<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.tomisztomek.kursakademiaandroida.features.locations.details.presentation.LocationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <TextView
            style="@style/style_headlines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Location_details" />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.location.name}"
            style="@style/style_item" />

        <TextView
            android:id="@+id/location_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.location.type}"
            style="@style/style_item" />

        <TextView
            android:id="@+id/location_dimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.location.dimension}"
            style="@style/style_item" />
    </LinearLayout>
</layout>