<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.tomisztomek.kursakademiaandroida.R" />
        <variable
            name="item"
            type="com.tomisztomek.kursakademiaandroida.features.locations.all.presentation.model.LocationDisplayable" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            style="@style/style_item" />

        <TextView
            android:id="@+id/location_dimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.dimension}"
            style="@style/style_item" />

        <TextView
            android:id="@+id/location_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.type}"
            style="@style/style_item" />

    </LinearLayout>
</layout>